html
  overflow hidden

h5
  margin 0
  padding-left 5px
  font-size 11px
  height 16px

#gl-view
  #preview
    background #000
    text-align center
    padding 8px 8px 0
    canvas#gl
      width 100%
      max-height 512px
      max-width 512px
      background-color #000

#logs
  padding 0 0 0 5px
  font-size 10px
  font-family: 'Source Code Pro','Andale Mono','Courier',monospace
  overflow scroll

.CodeMirror-code
  font-family 'Source Code Pro','Andale Mono','Courier',monospace
  font-size 11px

.line-error
  background #400 !important

.error-icon
  border-top-left-radius 8px
  border-bottom-left-radius 8px
  padding 1px 4px 0 6px
  font-weight bold
  background #c00
  color #eee

.error-line
  font-size 10px
  margin 4px 0
  padding 2px 8px

.error-message
  border-top-right-radius 8px
  border-bottom-right-radius 8px
  display inline-block
  color #622
  background #fff5cc
  padding 3px 8px 1px 3px

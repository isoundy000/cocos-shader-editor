html
  overflow hidden

h5
  margin 0
  padding 2px 5px
  font-size 11px
  height 16px

header
  .pure-menu
    font-size 12px

#gl-view
  #preview
    background #000
    text-align center
    background #333
    canvas#gl
      width 100%
      max-height 512px
      max-width 512px
      background-color #000

#panel-view
  .pure-menu
    font-size 12px
    .pure-menu-selected
      a
        border-bottom 2px solid #39c
        padding-bottom 3px

#panel-content
  overflow scroll
  padding-top 4px

#logs
  padding 0 0 0 5px
  font-size 10px
  font-family: 'Source Code Pro','Andale Mono','Courier',monospace
  overflow scroll

.pure-form
  font-size 75%
  input[type=text]
    padding 2px 4px
    width 24%
    margin 0 1% 2px 0
  label
    display block
    vertical-align middle
    line-height 24px
    margin 0 8px 0 0
    text-align right
  .form-control
    margin-bottom 4px

.CodeMirror-code
  font-family 'Source Code Pro','Andale Mono','Courier',monospace
  font-size 11px

.errors
  width 10px

.error-mark
  width 10px
  border-radius 5px
  background #c00
  text-align center
  font-weight bold

.line-error
  background #500 !important

.error-line
  font-size 10px
  margin 4px 0
  padding 2px 8px

.error-message
  border-radius 8px
  display inline-block
  color #622
  background #fff5cc
  padding 3px 8px 1px 3px
